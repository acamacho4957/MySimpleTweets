<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0DEED"
    tools:context=".ComposeActivity">

    <Button
        android:id="@+id/btAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_tweet_outline"
        android:text="@string/tweet"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/etCompose"
        app:layout_constraintTop_toBottomOf="@+id/tvCounter" />

    <Button
        android:id="@+id/btDecline"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_vector_close"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<android.support.design.widget.TextInputLayout-->
        <!--android:id="@+id/textInputLayout"-->
        <!--android:layout_width="395dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="15dp"-->
        <!--app:counterEnabled="false"-->
        <!--app:counterMaxLength="280"-->
        <!--app:counterOverflowTextAppearance="@style/TextAppearance.Design.Counter.Overflow"-->
        <!--app:counterTextAppearance="@style/TextAppearance.Design.Counter"-->
        <!--app:layout_constraintEnd_toEndOf="@+id/btAccept"-->
        <!--app:layout_constraintStart_toStartOf="@+id/btDecline"-->
        <!--app:layout_constraintTop_toTopOf="parent">-->


    <android.support.design.widget.TextInputEditText
        android:id="@+id/etCompose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/compose_tweet"
        android:maxHeight="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDecline" />
    <!--</android.support.design.widget.TextInputLayout>-->

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="280"
        android:textColor="@color/medium_gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/etCompose"
        app:layout_constraintTop_toBottomOf="@id/etCompose" />
</android.support.constraint.ConstraintLayout>

